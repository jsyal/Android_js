<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
   
    tools:context=".MainActivity" 

    android:background="@drawable/bck2">

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:padding="10dp"
        android:layout_centerInParent="true"
       
        android:background="@drawable/linearlayout_bg"
        >

        <Button 
               android:id="@+id/parentbutton"
               android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
               android:layout_margin="4dp"
               android:background="@drawable/button_parent"
               android:text="@string/LoginAsParent"
           />
        <Button 
               android:id="@+id/childbutton"
               android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
               android:layout_margin="4dp"
               android:background="@drawable/button_kid"
               android:text="@string/LoginAsChild"
           />
       
        </LinearLayout>

</RelativeLayout>

        
        
    
